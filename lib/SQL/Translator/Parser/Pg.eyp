                  funcname      => $_[0]->SystemFuncName($_[5]->names->[-1]),
                  args          => $_[0]->lappend($_[3]),
                  agg_order     => NIL,
                  agg_star      => FALSE,
                  agg_distinct  => FALSE,
                  func_variadic => FALSE,
                  over          => NULL,
                  location      => $_[0]->YYLLoc($_[1], 1),
