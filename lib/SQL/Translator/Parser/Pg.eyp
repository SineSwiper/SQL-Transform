                  funcname      => $_[0]->SystemFuncName("ltrim"),
                  args          => $_[4],
                  agg_order     => NIL,
                  agg_star      => FALSE,
                  agg_distinct  => FALSE,
                  func_variadic => FALSE,
                  over          => NULL,
