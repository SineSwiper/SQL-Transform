            }
      ;

opt_type:
         TYPE Sconst            { $_[2] }
         | /*EMPTY*/            { NULL  }
      ;


foreign_server_version:
         VERSION Sconst         { $_[2] }
      |  VERSION NULL           { NULL  }
      ;

opt_foreign_server_version:
         foreign_server_version { $_[1] }
         | /*EMPTY*/            { NULL  }
      ;

/*****************************************************************************
 *
 *       QUERY :
 *            DROP SERVER name
 *
