                  funcname      => $_[0]->SystemFuncName("btrim"),
                  args          => $_[4],
                  agg_order     => NIL,
                  agg_star      => FALSE,
                  agg_distinct  => FALSE,
                  func_variadic => FALSE,
                  over          => NULL,
                  location      => $_[0]->YYLLoc($_[1], 1),
